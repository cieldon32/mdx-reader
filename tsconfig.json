{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2019",
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "resolveJsonModule": true,
  },
  "include": ["src/**/*", "**/*.spec.ts", "demo/**/*"],
  "exclude": ["node_modules"]
}
